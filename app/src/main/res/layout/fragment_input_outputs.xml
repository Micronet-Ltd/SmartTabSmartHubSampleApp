<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InputOutputsFragment">

    <!--<ScrollView-->
        <!--android:id="@+id/ADCs"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:isScrollContainer="false">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblADCs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ADCs" />

            <GridView
                android:id="@+id/gridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblADCs"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/black"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:numColumns="4"
                android:verticalSpacing="2dp"></GridView>
            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="@string/refresh"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lblCradleState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:text="@string/cradle_state"
                android:layout_below="@id/gridview"/>

            <TextView
                android:id="@+id/textViewCradleState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lblCradleState"
                android:layout_below="@id/gridview"
                android:text="@string/not_in_cradle_state_text" />

            <TextView
                android:id="@+id/lblIIgnitionState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblCradleState"
                android:ems="7"
                android:text="@string/ignition_state" />

            <TextView
                android:id="@+id/textViewIgnitionState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewCradleState"
                android:layout_toEndOf="@id/lblIIgnitionState"
                android:text="@string/ignition_off_state_text" />

        </RelativeLayout>
    <!--</ScrollView>-->
</FrameLayout>
